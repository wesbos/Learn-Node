//- Handy mixin for making buttons
mixin button(url, text)
  table.btn.btn-primary(border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(border='0', cellpadding='0', cellspacing='0')
            tbody: tr: td: a(href=url, target='_blank')= text

