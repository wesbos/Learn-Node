mixin storeCard(store = {})
  .store
    .store__hero
      .store__actions
        .store__action.store__action--edit
          a(href=`/stores/${store.slug}/edit`)!= h.icon('pencil')
      img(src=`/uploads/${store.photo || 'store.png'}`)
      h2.title
        a(href=`/stores/${store.slug}`) #{store.name}
    .store__details
      p= store.description.split(" ").splice(0, 50).join(" ")